{
  "name": "lighttranslator",
  "private": true,
  "version": "1.1.1",
  "type": "module",
  "description": "轻量级翻译工具，支持划词翻译、截图OCR等功能",
  "author": "LightTranslator",
  "license": "MIT",
  "homepage": "https://github.com/user/lighttranslator",
  "dependencies": {
    "@google/genai": "^1.34.0",
    "@tauri-apps/api": "^2",
    "lucide-react": "^0.562.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.23",
    "cross-env": "^10.1.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.19",
    "typescript": "~5.8.2",
    "vite": "^6.2.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "prebuild": "node scripts/check-secrets.js || true",
    "typecheck": "tsc --noEmit",
    "tauri": "cargo tauri",
    "app:dev": "cargo tauri dev",
    "app:build": "cargo tauri build",
    "app:build:linux": "cargo tauri build --target x86_64-unknown-linux-gnu"
  }
}
